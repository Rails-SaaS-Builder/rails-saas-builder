<%# Email & Password login form — self-contained, modal-ready.
    Local variables:
      error: String|nil — error message from previous submission
      identifier: String|nil — previously submitted identifier
%>
<%= form_with url: session_path, method: :post, class: "space-y-6" do |f| %>
  <input type="hidden" name="credential_type" value="email_password">

  <% if local_assigns[:error].present? %>
    <div class="rounded-md bg-red-50 p-4">
      <p class="text-sm font-medium text-red-800"><%= error %></p>
    </div>
  <% end %>

  <div>
    <label for="identifier" class="block text-sm font-medium text-gray-700">Email address</label>
    <input id="identifier" name="identifier" type="email" autocomplete="email" required
      value="<%= local_assigns[:identifier] %>"
      class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
      placeholder="you@example.com">
  </div>

  <div>
    <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
    <input id="password" name="password" type="password" autocomplete="current-password" required
      class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
      placeholder="Enter your password">
    <div class="mt-2 text-sm text-right">
      <%= link_to "Forgot your password?", new_password_reset_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>

  <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
    Sign in
  </button>
<% end %>
