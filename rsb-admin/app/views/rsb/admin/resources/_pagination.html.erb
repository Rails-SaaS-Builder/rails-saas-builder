<div class="flex justify-between items-center mt-4 pt-4 border-t border-rsb-border">
  <div class="text-sm text-rsb-muted">
    <% from = ((current_page - 1) * per_page) + 1 %>
    <% to = [current_page * per_page, total_count].min %>
    <%= rsb_admin_t("shared.showing", from: from, to: to, total: total_count) %>
  </div>
  <div class="flex items-center gap-1">
    <% if current_page > 1 %>
      <a href="<%= base_path %>?page=<%= current_page - 1 %>"
         class="px-3 py-1.5 border border-rsb-border rounded-rsb text-sm hover:bg-rsb-bg">
        <%= rsb_admin_t("shared.previous") %>
      </a>
    <% end %>
    <% (1..total_pages).each do |page_num| %>
      <% if page_num == current_page %>
        <span class="px-3 py-1.5 bg-rsb-primary text-rsb-primary-text rounded-rsb text-sm font-medium">
          <%= page_num %>
        </span>
      <% else %>
        <a href="<%= base_path %>?page=<%= page_num %>"
           class="px-3 py-1.5 border border-rsb-border rounded-rsb text-sm hover:bg-rsb-bg">
          <%= page_num %>
        </a>
      <% end %>
    <% end %>
    <% if current_page < total_pages %>
      <a href="<%= base_path %>?page=<%= current_page + 1 %>"
         class="px-3 py-1.5 border border-rsb-border rounded-rsb text-sm hover:bg-rsb-bg">
        <%= rsb_admin_t("shared.next") %>
      </a>
    <% end %>
  </div>
</div>
