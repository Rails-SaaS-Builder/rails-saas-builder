<div class="min-h-screen flex items-center justify-center px-4 py-12">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="text-3xl font-extrabold text-red-600"><%= t("rsb.auth.account.confirm_delete_title") %></h2>
      <p class="mt-2 text-sm text-gray-600"><%= t("rsb.auth.account.confirm_delete_subtitle") %></p>
    </div>

    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= t("rsb.auth.account.confirm_delete_warning") %></h3>
        </div>
      </div>
    </div>

    <% if @errors.present? %>
      <div class="rounded-md bg-red-50 p-4 border border-red-200">
        <div class="ml-3">
          <div class="text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @errors.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with url: account_path, method: :delete, class: "space-y-6" do |f| %>
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700"><%= t("rsb.auth.account.enter_password") %></label>
        <input id="password" name="password" type="password" autocomplete="current-password" required
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm">
      </div>

      <div class="flex items-center justify-between">
        <%= link_to t("rsb.auth.account.cancel"), account_path, class: "text-sm text-gray-600 hover:text-gray-500" %>
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
          <%= t("rsb.auth.account.confirm_delete_button") %>
        </button>
      </div>
    <% end %>
  </div>
</div>
