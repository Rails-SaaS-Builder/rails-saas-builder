<%# Credential type selector — shows enabled credential types as clickable cards.
    Local variables:
      credential_types: Array<CredentialDefinition> — enabled types to show
      mode: String — "login" or "signup" (determines link target)
%>
<div class="space-y-3">
  <% credential_types.each do |cred_type| %>
    <% path = mode == "login" ? new_session_path(method: cred_type.key) : new_registration_path(method: cred_type.key) %>
    <% if cred_type.redirect_url.present? %>
      <%= link_to cred_type.redirect_url, class: "block w-full p-4 bg-white border border-gray-200 rounded-lg hover:border-indigo-300 hover:shadow-sm transition-all duration-150 group" do %>
        <div class="flex items-center">
          <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 group-hover:bg-indigo-50 transition-colors">
            <%= render "rsb/auth/credentials/icon", name: cred_type.icon %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-900 group-hover:text-indigo-600"><%= cred_type.label %></p>
          </div>
          <div class="ml-auto">
            <svg class="h-5 w-5 text-gray-400 group-hover:text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= link_to path, class: "block w-full p-4 bg-white border border-gray-200 rounded-lg hover:border-indigo-300 hover:shadow-sm transition-all duration-150 group" do %>
        <div class="flex items-center">
          <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 group-hover:bg-indigo-50 transition-colors">
            <%= render "rsb/auth/credentials/icon", name: cred_type.icon %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-900 group-hover:text-indigo-600"><%= cred_type.label %></p>
          </div>
          <div class="ml-auto">
            <svg class="h-5 w-5 text-gray-400 group-hover:text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
